{
  "name": "recipe-front-end",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@bootstrap-styled/provider": "1.5.3",
    "@bootstrap-styled/v4": "2.0.22",
    "classnames": "2.2.6",
    "common-tags": "1.8.0",
    "connected-react-router": "6.8.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "enzyme-to-json": "3.5.0",
    "flow-bin": "0.126.1",
    "formik": "1.4.2",
    "history": "4.10.1",
    "jest": "23.6.0",
    "jest-enzyme": "7.1.2",
    "prop-types": "15.6.2",
    "ramda": "0.26.1",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-kawaii": "0.10.0",
    "react-pure-lifecycle": "3.0.0",
    "react-redux": "6.0.0",
    "react-router-dom": "4.3.1",
    "react-scripts": "2.1.2",
    "react-test-renderer": "16.7.0",
    "redux": "4.0.1",
    "redux-devtools-extension": "2.13.7",
    "redux-persist": "5.10.0",
    "styled-components": "4.1.3",
    "uuid4": "1.1.4",
    "yup": "0.26.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "flow": "flow",
    "lint-staged": "lint-staged",
    "lint": "eslint --fix --ext .js src",
    "lint:css": "stylelint './src/**/*.js'",
    "offline": "sls offline start",
    "test": "react-scripts test",
    "test:coverage": "yarn test --coverage",
    "test:staged": "cross-env CI=true react-scripts test --env=jsdom --findRelatedTests"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "babel-eslint": "9.0.0",
    "cross-env": "5.2.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-react-app": "3.0.8",
    "eslint-plugin-flowtype": "2.50.3",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.20.0",
    "husky": "1.3.1",
    "jest-styled-components": "6.3.1",
    "lint-staged": "8.2.1",
    "redux-mock-store": "1.5.3",
    "stylelint": "9.9.0"
  },
  "lint-staged": {
    "*.js": [
      "npm run test:staged --",
      "flow focus-check",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/node_modules/",
      "!src/constants/*.js",
      "!src/helpers/*.js",
      "!src/store/*.js",
      "!src/theme/*.js",
      "!src/types/*.js",
      "!src/index.js",
      "!src/setupTests.js",
      "!src/serviceWorker.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text"
    ]
  }
}
